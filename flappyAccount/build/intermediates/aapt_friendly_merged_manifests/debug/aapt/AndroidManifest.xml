<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cpen391.flappyaccount"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- permission to access user's location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application>
        <activity
            android:name="com.cpen391.flappyaccount.activity.VerifyOTPActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.cpen391.flappyaccount.activity.ResetPasswordSuccessActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.cpen391.flappyaccount.activity.ForgetPasswordActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.cpen391.flappyaccount.activity.StartActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="com.cpen391.flappyaccount.activity.ResetPasswordActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.cpen391.flappyaccount.activity.SignUpActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.cpen391.flappyaccount.activity.LoginActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.cpen391.flappyUI.SingleGameStartActivity" />
        <activity android:name="com.cpen391.flappyUI.EndGamePointActivity" />
        <activity android:name="com.cpen391.flappyUI.PersonalDataActivity" />
        <activity android:name="com.cpen391.flappyVoiceRecording.VoiceControlActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>